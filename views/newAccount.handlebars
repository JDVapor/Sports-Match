<div id="home">

  <nav class="nav">
    <a id="newacc" class="nav-link" href="#">Create Account</a>
    <a id="signin" class="nav-link" href="#">Sign in</a>
    <a id="profile" class="nav-link" href="#">Profile</a>
  </nav>

  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">

        <form class="clearfix mb-4" action="POST">
          <h4>{{msg}}</h4>
          <div class="form-group">
            <label for="newEmail">E-mail</label>
            <input type="text" id="newEmail" class="form-control" aria-describedby="newEmail" placeholder="Enter your email">
          </div>
          <div class="form-group">
            <label for="newUser">Username</label>
            <input type="text" id="newUser" class="form-control" aria-describedby="newUser" placeholder="Enter a Username">
          </div>
          <div class="form-group">
            <label for="newPassword">Password</label>
            <input type="text" id="newPassword" class="form-control" aria-describedby="newPassword" placeholder="Enter a password">
          </div>
          <button id="submitNewUser" class="btn btn-primary float-right">Submit</button>
        </form>

      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>
