<div class="container">
  <div class="row">
    <div class="col-8 offset-2">
      <div class="card mt-4">
        <div class="card-body">
          <h5 class="card-title">Event</h5>

          <p>
            <strong>ID</strong>: {{event.id}}
          </p>
          <p>
            <strong>Created by</strong>: {{event.username}}
          </p>
          <p>
            <strong>Category</strong>: {{event.category}}
          </p>
          <p>
            <strong>Description</strong>: {{event.description}}
          </p>
          <p>
            <strong>Location</strong>: {{event.location}}
          </p>
          <strong>Date</strong>: {{event.eventDate}}
        </p>
          <p>
            <strong>Time</strong>: {{event.timeOfEvent}}
          </p>
          <p>
            <strong>Players Needed</strong>: {{event.maxPlayers}}
          </p>

          <p>
            <strong>Registered Players</strong>: {{event.currentPlayers}}
          </p>

          <p>Click to register for this event!</p>
          <button type="button" id="register" class="btn btn-outline-secondary">Register</button>

          <br>

          <a href="/">‚Üê Back To Home</a>
        </div>
      </div>
    </div>
  </div>
